{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/workers",
    "rootDir": "src",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": false,
    "sourceMap": true,
    "noEmit": false,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": "."
  },
  "include": [
    "src/lib/regulatory-truth/workers/**/*.ts",
    "src/lib/regulatory-truth/agents/**/*.ts",
    "src/lib/regulatory-truth/utils/**/*.ts",
    "src/lib/db/**/*.ts"
  ],
  "exclude": ["**/*.test.ts", "**/__tests__/**"]
}

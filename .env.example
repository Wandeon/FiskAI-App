# =============================================================================
# FiskAI-App Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values.

# Database (PostgreSQL 16 in Docker)
DATABASE_URL="postgresql://fiskai:YOUR_PASSWORD@localhost:5434/fiskai_fresh?schema=public"

# NextAuth
# For development: http://localhost:3000
# For production: https://app.fiskai.hr
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-with-openssl-rand-hex-32"

# Application
# For development: http://localhost:3000
# For production: https://app.fiskai.hr
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="FiskAI"

# Email (Resend)
RESEND_API_KEY=""
RESEND_FROM_EMAIL="FiskAI <noreply@fiskai.hr>"

# E-Poslovanje Integration (Phase 2)
EPOSLOVANJE_API_BASE=""
EPOSLOVANJE_API_KEY=""
